@model WebApplication1.Models.fixture

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Fixtures</title>
    <style>
        table, td, th {
            border: 1px solid #ddd;
            text-align: left;
        }

        table {
            border-collapse: collapse;
            width: 70%;
        }

        th, td {
            padding: 6px;
        }
    </style>
</head>
<body>
    <div>
        <h4 style="text-align:center;padding-top:30px;font-size:25px;">Current Fixtures</h4><hr />
        <h4 style="text-align:center;padding-top:60px;font-size:18px;">@Html.ActionLink("Add New Fixture", "newfixture")</h4>
        @{
            WebApplication1.Models.mydbEntities5 db = new WebApplication1.Models.mydbEntities5();
            List<WebApplication1.Models.fixture> ls = db.fixtures.ToList();
            foreach (var nam in ls)
            {
                <br><br>
                <table id="t01" align="center">

                    <tr style="background-color: #eee;">
                        <th>Match No</th>
                        <td style="font:bold;font-size:22px;">@nam.matchno</td>
                    </tr>
                    <tr style="font:bold;font-size:20px;">
                        <th>date</th>
                        <td>@nam.date</td>
                    </tr>
                    <tr style="background-color: #eee;font:bold;font-size:20px;">
                        <th>Team 1</th>
                        <td>@nam.team1</td>
                    </tr>
                    <tr style="font:bold;font-size:20px;">
                        <th>Team 2</th>
                        <td>@nam.team2</td>
                    </tr>
                    <tr style="background-color: #eee;font:bold;font-size:20px;">
                        <th>Timing</th>
                        <td>@nam.timing</td>
                    </tr>
                </table>
                <br><br>
                <div style="text-align:center;font-size:18px;">
                    @Html.ActionLink("Edit match details>>  |", "Editfixt", new { id = @nam.matchno })
                    @Html.ActionLink("Cancel match>>  |", "Cancelfixt", new { id = @nam.matchno })
                    @Html.ActionLink("Back to AdminPanel>>", "admin")
                </div>
            }
        }
    </div>
    <p style="font-size:18px;text-align:center;">
        @Html.ActionLink("Cancel All Matches>>  |", "cancelallmatch")
    </p>
</body>
</html>
