@model WebApplication1.Models.particpent

@{
    ViewBag.Title = "teamstatus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    string usremail = Convert.ToString(Session["loguseremail"]);
    WebApplication1.Models.mydbEntities5 db = new WebApplication1.Models.mydbEntities5();
    List<WebApplication1.Models.particpent> ls = db.particpents.Where(s => s.email == usremail).ToList();
  }

<html>
<head>
    <style>
        table, td, th {
            border: 1px solid #ddd;
            text-align: left;
        }

        table {
            border-collapse: collapse;
            width: 70%;
        }

        th, td {
            padding: 6px;
        }
    </style>
</head>
<body>
    <br /><h2 style="text-align:center;">Team Registration Status</h2><hr /><br /><br /><br />
    
        @foreach (var row in ls)
        {
            <table id="t01" align="center">

                <tr style="background-color: #eee;font:bold;font-size:20px;">
                    <th>Team Name</th>
                    <td style="font:bold;font-size:22px;">@row.teamname</td>
                </tr>
                <tr style="font:bold;font-size:20px;">
                    <th>Captain Name</th>
                    <td>@row.captainname</td>
                </tr>
                <tr style="background-color: #eee;font:bold;font-size:20px;">
                    <th>Coach Name</th>
                    <td>@row.coachname</td>
                </tr>
                </table><br /><br />
                <p style="padding-left:35%;font-size:25px;">
                         Team Registration Status :
                         @if (@row.status == null)
                         {<h2 style="padding-left:40%;">Pending...</h2>}
                         else
                         { <h2 style="padding-left:40%;">Approved</h2>}
                </p>
        }
    <br /><br /><br />
</body>
</html>

